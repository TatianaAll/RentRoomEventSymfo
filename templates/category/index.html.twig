{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}

    <section class="container">
        <h2 class="text-primary h2">Les catégories d'évènements proposés</h2>
        <div class="d-flex justify-content-around flex-wrap">
            {% for category in categories %}
                <div class="card mt-3 mr-3" style="width: 18rem;">
                    <div class="card-body">
                        <h3 class="card-title">{{ category.name }}</h3>
                        <p class="card-text">Situé à {{ category.description }}</p>

                        <a href="{{ path('category_update', {id: category.id}) }}"
                           class="card-link link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Mettre
                            à
                            jour</a>

                        <a href="{{ path('category_delete', {id: category.id}) }}"
                           class="card-link link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Supprimer</a>

                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('category_create') }}" class="btn btn-primary mt-4">Ajouter une catégorie</a>

    </section>

{% endblock %}
